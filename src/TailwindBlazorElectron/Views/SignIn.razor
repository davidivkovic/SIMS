@page "/signin"
@layout EmptyLayout

@using HeroIcons.Blazor.Solid
@using TailwindBlazorElectron.Services

@inject NavigationManager Router
@inject LibraryService LibraryService

@code {
	string Email, Password;
	void OnSubmit()
	{
		var user = LibraryService.SignIn(Email, Password);

		if (user is not null)
		{
			Router.NavigateTo("");
		}
	}
}

<div class="w-screen h-screen select-none ">
	<div class="flex h-full">
		<div class="relative flex-1 hidden xl:flex-initial md:block">
			<div class="absolute z-10 hidden px-24 mt-24 opacity-80 xl:px-32 xl:mt-44 md:block text-lime-900">
				<p class="text-6xl font-bold tracking-tight lg:text-7xl ">Start exploring<br> our books
					today</p>
				<p class="mt-1 font-medium tracking-tight">Don't miss out, share the news with your friends!
				</p>
			</div>
			<img class="object-cover h-screen"
				src="https://images.unsplash.com/photo-1510172951991-856a654063f9?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1868&q=100">
		</div>
		<div class="flex flex-col items-center justify-center flex-1 w-full text-sm bg-white">
			<div class="w-4/5 md:w-2/3 2xl:w-1/2 3xl:w-2/5">
				<div class="inline-block cursor-pointer" @onclick='() => Router.NavigateTo("")'>
					<p class="text-2xl font-semibold">ðŸ“š BookShelf</p>
				</div>
				<div class="w-full mt-10">
					<span class="text-3xl font-semibold text-gray-900">Hi, Welcome Back!</span>
				</div>
				<div class="w-full mt-2 text-gray-700">
					<p>You can sign in with your personal info if you have already registered at your local library.</p>
				</div>
				<button
					class="inline-flex items-center justify-center w-full px-2 py-2.5 mt-10 transition-colors border rounded-lg focus:outline-none hover:bg-gray-50">
					<div>
						<img class="w-6 h-6 p-1"
							src="https://cdn.icon-icons.com/icons2/836/PNG/512/Google_icon-icons.com_66793.png" />
					</div>
					<span class="ml-2 font-medium">Sign in with Google</span>
				</button>
				<form @onsubmit="() => OnSubmit()">
					<p class="mt-5 text-center">or</p>
					<div class="mt-7">
						<p class="text-xs font-medium text-gray-700">Your Email</p>
						<input required @bind="@Email" autocomplete="email"
							class="w-full px-4 mt-2 text-sm transition-colors border-gray-300 rounded-lg h-11 focus:border-lime-600 focus:ring-1 focus:ring-lime-600"
							type="email" placeholder="example@email.com" />
					</div>
					<div class="mt-3">
						<p class="text-xs font-medium text-gray-700">Password</p>
						<input required @bind="@Password" autocomplete="current-password"
							class="w-full px-4 mt-2 text-sm transition-colors border-gray-300 rounded-lg h-11 focus:border-lime-600 focus:ring-1 focus:ring-lime-600"
							type="password" placeholder="Your password" />
					</div>
					<button
						class="w-full px-3 py-3 mt-10 font-medium text-white transition duration-150 ease-in-out rounded-lg bg-lime-800 hover:opacity-90 focus:outline-none">Sign
						in</button>
					<div
						class="mt-4 text-sm font-medium text-center text-gray-500 transition duration-150 ease-in-out cursor-pointer 3xl:text-xs hover:text-lime-600">
						Forgot Password?</div>
				</form>
			</div>
		</div>


	</div>

</div>
