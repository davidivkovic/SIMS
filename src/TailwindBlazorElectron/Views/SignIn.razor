@page "/signin"
@layout EmptyLayout
@using HeroIcons.Blazor.Solid

@inject NavigationManager Router

@code {
	string Email, Password;
	void OnSubmit()
	{
		Console.WriteLine(Email);
		Console.WriteLine(Password);

		Router.NavigateTo("");
	}
}

<div class="flex w-screen h-screen text-sm select-none ">
	<div class="flex items-start w-full my-auto">
		<div class="flex flex-col items-center justify-center w-full text-sm bg-white lg:w-1/2">
			<div class="w-9/12 lg:w-7/12 3xl:w-5/12">
				<div class="w-full">
					<p class="text-2xl font-semibold">ðŸ“š BookShelf</p>
				</div>
				<div class="w-full mt-10">
					<span class="text-3xl font-semibold text-gray-900">Hi, Welcome Back!</span>
				</div>
				<div class="w-full mt-2 text-gray-700">
					<p>You can sign in with your personal info if you have already registered at your local library.</p>
				</div>
				<button
					class="inline-flex items-center justify-center w-full px-2 py-2.5 mt-10 transition duration-150 ease-in-out border-2 border-gray-100 rounded-lg focus:outline-none hover:bg-gray-50">
					<div>
						<img class="w-6 h-6 p-1"
							src="https://cdn.icon-icons.com/icons2/836/PNG/512/Google_icon-icons.com_66793.png" />
					</div>
					<span class="ml-2 font-medium">Sign in with Google</span>
				</button>
				<form @onsubmit="() => OnSubmit()">
					<p class="mt-5 text-center">or</p>
					<div class="mt-7">
						<p class="text-xs font-medium text-gray-700">Your Email</p>
						<input required @bind="@Email" autocomplete="email"
							class="w-full px-4 mt-2 text-sm transition-colors border-gray-300 rounded-lg h-11 focus:border-white focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-opacity-50"
							type="email" placeholder="example@email.com" />

					</div>
					<div class="mt-3">
						<p class="text-xs font-medium text-gray-700">Password</p>
						<input required @bind="@Password" autocomplete="current-password"
							class="w-full px-4 mt-2 text-sm transition-colors border-gray-300 rounded-lg h-11 focus:border-white focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-opacity-50"
							type="password" placeholder="Your password" />
					</div>
					<button
						class="w-full px-3 py-3 mt-10 font-semibold text-white transition duration-150 ease-in-out rounded-lg bg-amber-500 hover:bg-amber-400 focus:outline-none">Sign
						in</button>
					<div
						class="mt-4 text-sm font-medium text-center text-gray-700 transition duration-150 ease-in-out cursor-pointer 3xl:text-xs hover:text-amber-500">
						Forgot Password?</div>
				</form>
			</div>
		</div>
		<div class="z-10 self-start hidden ml-24 text-xs text-white lg:block mt-14">
			<p class="font-bold tracking-tight text-7xl ">Start exploring<br> our books today</p>
			<p class="mt-1 font-medium tracking-tight text-md">Don't miss out, share the news with your friends!</p>
		</div>
	</div>

	<div class="absolute right-0 w-0 h-0 lg:h-full lg:w-1/2">
		<img class="object-cover w-full h-full" src="https://source.unsplash.com/sM-vlNlM6IU/3000x3000">
	</div>
</div>
