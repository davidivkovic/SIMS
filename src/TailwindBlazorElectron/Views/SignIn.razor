@page "/signin"
@using HeroIcons.Blazor.Solid


<div class="flex flex-row w-screen h-screen text-sm select-none ">
    <div class="flex flex-col items-center justify-center w-1/2 text-sm bg-white">
        <div class="w-7/12 3xl:w-5/12">
            <div class="w-full">
                <span class="text-2xl font-semibold">ðŸ“š Library</span>
            </div>
            <div class="w-full mt-10">
                <span class="text-3xl font-semibold text-gray-900">Hi, Welcome Back!</span>
            </div>
            <div class="w-full mt-2 text-gray-700">
                <span>You can sign in with your personal info if you have already <span class="text-amber-500">registered </span>at your local library.</span>
            </div>
            <button class="inline-flex items-center justify-center w-full px-2 py-2 mt-10 transition duration-150 ease-in-out border-2 border-gray-100 rounded-lg focus:outline-none hover:bg-gray-50">
                <div>
                    <img class="w-6 h-6 p-1" src="https://cdn.icon-icons.com/icons2/836/PNG/512/Google_icon-icons.com_66793.png"/>
                </div>
                <span class="ml-2 font-semibold">Sign in with Google</span>
            </button>
            <div class="mt-5 text-center">or</div>
            <div class="flex flex-col w-full border border-transparent mt-7">
                <label class="text-sm font-semibold text-gray-700 3xl:text-xs">Your Email</label>
                <input class="px-4 mt-2 transition-colors border-gray-300 rounded-lg focus:border-white focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-opacity-50" type="text" placeholder="name@email.com"/>
                
            </div>
            <div class="flex flex-col w-full mt-5">
                <label class="font-semibold text-gray-700">Password</label>
                <input class="px-4 mt-2 transition-colors border-gray-300 rounded-lg focus:border-white focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-opacity-50" type="password" placeholder="at least 8 characters"/>
            </div>
            <div class="mt-3 text-sm font-semibold text-gray-700 transition duration-150 ease-in-out cursor-pointer 3xl:text-xs hover:text-amber-500">
                Forgot Password?</div>
            <button class="w-full px-3 py-3 mt-5 font-semibold text-white transition duration-150 ease-in-out rounded-lg bg-amber-500 hover:bg-amber-400 focus:outline-none">Sign in</button>   
        </div>
    </div>
    <div class="flex justify-center w-1/2 h-full ">
        <div class="absolute z-10 float-right text-xs text-left text-white mt-36 3xl:mt-96 3xl:text-sm">
            <p class="text-6xl font-bold tracking-tight ">Start exploring<br> our books today</p>
            <p class="mt-1 font-medium tracking-tight text-md">Don't miss out, share the news with your friends!</p>
        </div>
        <img class="w-full h-full"
        src="https://source.unsplash.com/sM-vlNlM6IU/3000x3000">
    </div> 
</div>
