@code {
	public bool Visible;
	[Parameter] public RenderFragment ChildContent { get; set; }

	public void Toggle()
	{
		Visible = !Visible;
	}
}

@if (Visible)
{
	<div class="fixed inset-0 z-10 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
		<div class="flex items-end justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
			<div class="fixed inset-0 transition-opacity bg-gray-500 bg-opacity-75 cursor-pointer" aria-hidden="true"
			@onclick="() => Toggle()"></div>

			<!-- This element is to trick the browser into centering the modal contents. -->
		<span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

			<div
			class="inline-block overflow-hidden align-bottom transition-all transform bg-white rounded-lg shadow-xl sm:my-8 sm:align-middle">
				@ChildContent
			</div>
		</div>
	</div>
}